<% if @response.blank? || @response[:data].blank? %>
  <div class='alert alert-danger'>
    <%= @response[:message] %>
  </div>
<% end %>
<%= render partial: '/forecast/address_form'%>

<br><br>

<% if @response.present? && @response[:data].present? %>
  <div id="weather_details container mt-4">
    <div class='alert alert-success'>
      <%= @response[:message] %>
    </div>
    <div class="p-3 text-primary-emphasis bg-light-subtle border border-primary-subtle rounded-3">
    <div class="p-3">
      <%= render partial: "forecast/forecast_summary", locals: { response_data: @response[:data] } %>
    </div>
    </div>
  </div>
<% end %>