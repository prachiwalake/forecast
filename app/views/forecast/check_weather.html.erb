<% if @response.blank? || @response[:data].blank? %>
	<div class='alert alert-danger'>
		<%= @response[:message] %>
	</div>
<% end %>
<nav class="navbar navbar-expand-lg bg-body-tertiary">
	<div class="container-fluid">
		<h3> Weather Forecast</h3>
		<%= form_tag(check_weather_path, :method => :get, :id => "forecast_form") do %>
			<div>
				<%= text_field_tag :address, nil, placeholder: 'Enter address' %>
				<%= text_field_tag :zipcode, nil, placeholder: 'Enter Zipcode', required: true %>
				<%= submit_tag 'Search' %>
			</div>
		<% end %>
	</div>
</nav>

<br><br>

<% if @response.present? && @response[:data].present? %>
	<div id="weather_details container mt-4">
		<div class='alert alert-success'>
			<%= @response[:message] %>
		</div>
		<div class="p-3 text-primary-emphasis bg-light-subtle border border-primary-subtle rounded-3">
				<div class="p-3">
					<%= render partial: "forecast/forecast_summary", locals: { response_data: @response[:data] } %>
				</div>
		</div>
	</div>
<% end %>